<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can you pick it up?"
            android:textColor="@color/md_grey_800"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/pick_up_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pick_up_yes_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/pick_up_no_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="No" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/pick_up_on_yes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stretchiness"
                android:textColor="@color/md_grey_800"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/stretch_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/stretch_sticky_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="¼&quot; or less" />

                <RadioButton
                    android:id="@+id/stretch_tacky_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="½ - ¾&quot;" />

                <RadioButton
                    android:id="@+id/stretch_stretchy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1&quot; or more" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consistency"
                android:textColor="@color/md_grey_800"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/consistency_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/consistency_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="None" />

                <RadioButton
                    android:id="@+id/consistency_gummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Gummy" />

                <RadioButton
                    android:id="@+id/consistency_pasty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Pasty" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Color"
                android:textColor="@color/md_grey_800"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/color_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/color_yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/yellow_button_background"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/color_cloudy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/cloudy_button_background"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/color_clear"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/clear_button_background"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/color_cloudy_clear"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/cloudy_clear_button_background"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/color_red"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/red_button_background"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/color_brown"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/brown_button_background"
                    android:button="@android:color/transparent" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yellow"
                    android:textAlignment="center"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cloudy"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cloudy/Clear"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Red"
                    android:textAlignment="center"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brown"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pick_up_on_no_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textColor="@color/md_grey_800"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/appearance_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/appearance_damp_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Damp" />

                <RadioButton
                    android:id="@+id/appearance_wet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Wet" />

                <RadioButton
                    android:id="@+id/appearance_shiny_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shiny" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensation"
            android:textColor="@color/md_grey_800"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_lubricative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lubricative"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:textColor="@color/md_grey_800"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/frequency_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/frequency_1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="1x" />

            <RadioButton
                android:id="@+id/frequency_2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="2x" />

            <RadioButton
                android:id="@+id/frequency_3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="3x" />

            <RadioButton
                android:id="@+id/frequency_4_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="4x or more" />

        </RadioGroup>

        <Button
            android:id="@+id/edit_mucus_done"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:enabled="false"
            android:text="@string/done" />

    </LinearLayout>

</ScrollView>